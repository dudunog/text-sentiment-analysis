{
  "name": "text-sentiment-analysis",
  "version": "1.0.0",
  "description": "Criar uma API simples que:\r \t1.\tAnalisa um texto de entrada.\r \t2.\tRetorna estatísticas básicas.\r \t3.\tIntegra com uma API pública de IA para detectar sentimento.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "db:dev": "docker-compose -f ./docker-compose.yml up -d",
    "build": "tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/src/main/server/index.js",
    "migration:generate": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/main/config/database/data-source.ts migration:generate ./src/main/config/database/migrations/default",
    "migration:run": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/main/config/database/data-source.ts migration:run",
    "migration:revert": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/main/config/database/data-source.ts migration:revert",
    "lint": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dudunog/text-sentiment-analysis.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dudunog/text-sentiment-analysis/issues"
  },
  "homepage": "https://github.com/dudunog/text-sentiment-analysis#readme",
  "dependencies": {
    "@types/sqlite3": "^3.1.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "stopword": "^3.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cpx": "^1.5.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
